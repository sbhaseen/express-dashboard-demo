<h1>{{title}}</h1>

<p><strong>Do you really want to delete this process Instance?</strong></p>

<div style="margin-left: 20px">
  <p><strong>ID: </strong>{{processinstance._id}}</p>
  <p><strong>Title: </strong><a href={{processinstance.process.url}}>{{processinstance.process.title}}</a></p>
  <p><strong>Operator: </strong>{{processinstance.Operator}}</p>
  <p><strong>Status: </strong>
  {{#if (isScheduled processinstance.status)}}
    <span class="text-warning">{{processinstance.status}}</span>
  {{else if (isStarted processinstance.status)}}
    <span class="text-danger">{{processinstance.status}}</span>
  {{else}}
    <span class="text-success">{{processinstance.status}}</span>
  {{/if}}
  </p>
  {{#unless (isStarted processinstance.status)}}
    <p><strong>Scheduled end: </strong>{{processinstance.scheduled_end_formatted}}</p>
  {{/unless}}
</div>

<form method="POST" action="">
  <div class="form-group">
    <input id="id" class="form-control" type="hidden" name="id" required="true" value="{{processinstance._id}}">
  </div>
  <button class="btn btn-danger" type="submit">Delete</button>
</form>



